set -exu

NAME="${1:-}"
NAME_ARG="-s $NAME"
TARGET_ARG="-t $NAME"
WORKING_DIR="${2:-}"

if [ ! -z $WORKING_DIR ]
then
  cd $WORKING_DIR
fi

if [ -z $NAME ]
then
  NAME_ARG=""
  TARGET_ARG=""
fi

tmux new -d $NAME_ARG -n editor
tmux neww $TARGET_ARG -n admin
tmux neww $TARGET_ARG -n services
tmux att
